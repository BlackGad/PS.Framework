<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:PS.WPF.Controls"
                    xmlns:resources="clr-namespace:PS.WPF.Resources"
                    xmlns:standard="clr-namespace:PS.WPF.Controls.Native">

    <ResourceDictionary.MergedDictionaries>
        <resources:SharedResourceDictionary Source="/PS.WPF;component/Controls/Native/Button.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{x:Static controls:Button+Resource.ControlStyle}"
           BasedOn="{StaticResource {x:Static standard:Button.ButtonStyle}}" TargetType="controls:Button" />

</ResourceDictionary>