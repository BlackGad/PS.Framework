<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:resources="clr-namespace:PS.WPF.Resources"
                    xmlns:local="clr-namespace:PS.WPF.Styles">
    <ResourceDictionary.MergedDictionaries>
        <resources:SharedResourceDictionary Source="/PS.WPF;component/Styles/ComboBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource {x:Static local:ComboBox.ComboBoxStyle}}" TargetType="{x:Type ComboBox}" />

</ResourceDictionary>