<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PS.WPF.Controls.Native">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/PS.WPF;component/Controls/Native/Menu.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource {x:Static local:Menu.SeparatorStyle}}" TargetType="{x:Type Separator}" />
    <Style BasedOn="{StaticResource {x:Static local:Menu.MenuItemStyle}}" TargetType="{x:Type MenuItem}" />
    <Style BasedOn="{StaticResource {x:Static local:Menu.MenuStyle}}" TargetType="{x:Type Menu}" />
    <Style BasedOn="{StaticResource {x:Static local:Menu.ContextMenuStyle}}" TargetType="{x:Type ContextMenu}" />

</ResourceDictionary>