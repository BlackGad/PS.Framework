<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:PS.Shell.Module.Diagram.Controls">

    <ControlTemplate x:Key="{x:Static controls:DiagramCanvas+Resource.ControlTemplate}" TargetType="controls:DiagramCanvas">
        <ItemsPresenter />
    </ControlTemplate>

    <Style x:Key="{x:Static controls:DiagramCanvas+Resource.ControlStyle}" TargetType="controls:DiagramCanvas">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template" Value="{StaticResource {x:Static controls:DiagramCanvas+Resource.ControlTemplate}}" />
    </Style>

</ResourceDictionary>