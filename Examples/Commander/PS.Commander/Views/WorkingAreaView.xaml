<Grid x:Class="PS.Commander.Views.WorkingAreaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:commander="clr-namespace:PS.Commander"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mvvm="http://schemas.ps.com/2019/xaml/mvvm"
      xmlns:viewModels="clr-namespace:PS.Commander.ViewModels"
      d:DataContext="{d:DesignInstance viewModels:WorkingAreaViewModel}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Focusable="False"
      mc:Ignorable="d">

    <TabControl ContentTemplateSelector="{mvvm:TemplateResolver}"
                ItemTemplateSelector="{mvvm:TemplateResolver Region={x:Static commander:ViewRegions.WorkingAreaTab}}"
                ItemsSource="{Binding ExplorerViewModels}"
                SelectedItem="{Binding SelectedExplorerView, Mode=TwoWay}">
        <TabControl.Resources>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="AllowDrop" Value="True" />
                <EventSetter Event="PreviewMouseMove" Handler="TabItem_PreviewMouseMove" />
                <EventSetter Event="PreviewMouseDown" Handler="TabItem_PreviewMouseDown" />
                <EventSetter Event="Drop" Handler="TabItem_Drop" />
            </Style>
        </TabControl.Resources>
    </TabControl>
</Grid>