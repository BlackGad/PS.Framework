<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ps="http://schemas.ps.com/2019/xaml"
                    xmlns:ribbon="clr-namespace:PS.Shell.Module.Ribbon"
                    xmlns:theme="http://schemas.ps.com/2021/xaml/theme">
    <Style x:Key="{x:Static ribbon:XamlResources.RibbonStyle}" TargetType="ps:Ribbon">
        <Setter Property="Accent" Value="{theme:Brush Accent}" />
        <Setter Property="Background" Value="{theme:Brush Main}" />
        <Setter Property="BorderBrush" Value="{theme:Brush MainBorder}" />
        <Setter Property="CaptionForeground" Value="{theme:Brush Main}" />
        <Setter Property="ContextualTabHeaderBackground" Value="{theme:Brush AccentDeep}" />
        <Setter Property="FontFamily" Value="{theme:Font Strong}" />
        <Setter Property="Foreground" Value="{theme:Brush MainForeground}" />
        <Setter Property="SelectedTabHeaderBackground" Value="{theme:Brush Main}" />
        <Setter Property="SelectedTabHeaderForeground" Value="{theme:Brush AccentLow}" />
        <Setter Property="TabHeaderBackground" Value="{theme:Brush AccentLow}" />
        <Setter Property="TabHeaderForeground" Value="{theme:Brush Main}" />
    </Style>
</ResourceDictionary>